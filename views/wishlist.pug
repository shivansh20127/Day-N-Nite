<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            |    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>My Cart</title>
        <style>
        </style>
    </head>

    <body>
        <div class="container">
            <div class="flex d-flex form-label mt-4 justify-content-between">
                <a href="/" style="text-decoration: none">
                    | <h1 class="me-4">Day n Nite Store</h1>
                    | </a>
                <form action="/" method="POST" class="d-flex flex mt-2 col-6">
                    <input type="search" name="searchbox" class="form-control px-3" aria-label="searchbox"
                    |    placeholder="Search Here">
                    <button type="submit" class="ms-1 px-2" value="OK">GO</button>
                </form><a href="/signin" style="color: black; margin-top: 15px;">#{userid}</a>
            </div>
            <h2 class="mt-5 mb-4 mx-1">Wish List</h2>
            <div>
                <div class="mb-3">
                    <div style="width: 100%;">
                    if wish_products.length == 0
                        <div class="mx-5" style="width: 100%;">
                            <p class="text.dark"><span class="fw-bold">None </p>
                        </div>
                    else
                        <div class="mx-5">
                            each val,index in wish_products
                                <div class="d-flex flex justify-content-between" style="border-bottom: 2px solid grey;"> 
                                    <div class="d-flex flex">
                                        <img src="#{val.Product_link}" alt="" srcset="" class="img-thumbnail me-3 m-2" style="display: block; height: 50px; width: 50px">
                                        <p class="mt-3">#{val.Product_Name} || <a href="/productPage/#{val.ProductID}">LINK</a> || MRP: Rs.#{val.Product_MRP} || SGST: #{val.Applicable_SGST}% || CGST: #{val.Applicable_CGST}% </p>
                                    </div>
                                    <div class="d-flex flex">
                                        <p class="mx-5 mt-2"><a href="/wcartAdd/#{val.ProductID}"><button class="btn btn-success">Add to Cart</button></a></p>
                                        <p class="mx-5 mt-2"><a href="/wRemove/#{val.ProductID}"><button class="btn btn-danger">Remove</button></a></p>
                                    </div>
                                </div>
                            end
                        </div>

                    </div>
                </div>    
            </div>
        </div>

            
            

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>

</html>