<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            |    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>Document</title>
        <style>
        </style>
    </head>

    <body>
        <div class="container">
            <div class="flex d-flex form-label mt-4 justify-content-between">
                <a href="/" style="text-decoration: none">
                    | <h1 class="me-4">Day n Nite Store</h1>
                    | </a>
                <form action="/" method="POST" class="d-flex flex mt-2 col-6">
                    <input type="search" name="searchbox" class="form-control px-3" aria-label="searchbox"
                    |    placeholder="Search Here">
                    <button type="submit" class="ms-1 px-2" value="OK">GO</button>
                </form><a href="/signin" style="color: black; margin-top: 15px;">#{userid}</a>
            </div>
            <h2 class="mt-5">Product Page</h2>
            <div class="row mt-4">
                <div class="col">
                    <img src="#{product[0].Product_link}" alt="" srcset="" class="img-thumbnail me-3 m-2"
                    |    style="display: block; height: 450px; width: 450px">
                </div>
                <div class="col display flex">
                    <div class="row mt-4 justify-content-between text-center">
                        <h2>#{product[0].Product_Name}</h2>
                    </div>
                    <div class="row mt-5 justify-content-between">
                        <p><span class="fw-bold">Category</span> - #{product[0].Product_type}</p>
                        <p><span class="fw-bold">Manufacturer</span> - #{product[0].Manufacturer}</p>
                    </div>
                    <div class="row mt-1 justify-content-between">
                        <p><span class="fw-bold">MRP</span> - Rs. #{product[0].Product_MRP}</p>
                        <p><span class="fw-bold">Applicable_SGST</span> - #{product[0].Applicable_SGST}%</p>
                        <p><span class="fw-bold">Applicable_CGST</span> - #{product[0].Applicable_CGST}%</p>
                    </div>
                    <div class="row mt-1 justify-content-between">
                        <p><span class="fw-bold">Description</span> - #{product[0].Product_Description}</p>
                    </div>
                    <div class="d-flex flex">
                        <p class="mx-5 mt-2"><a href="/AddCart/#{product[0].ProductID}"><button class="btn btn-success">Add to Cart</button></a></p>
                        <p class="mx-5 mt-2"><a href="/AddWish/#{product[0].ProductID}"><button class="btn btn-primary">Add to Wish List</button></a></p>
                    </div>
                </div>
            </div>
            <div class="mt-5 mb-3 text-center" style="width: 100%;">
                <h2 class="text-center mt-5">QnA Section</h2>
            </div>
            for val in Questions
                <div style="border-bottom: 2.5px solid rgb(128, 126, 126);" class="mb-3">
                    <div class="row">
                        <p class="fst-italic m-0"><span class="fw-bolder text-secondary"> User : #{val.LoginID}</span></p>
                        <p class="text"><span class="fw-bold"> Question : </span>#{val.Question_Statement}</p>
                    </div>
                    if val.Answer != null
                        <div class="row">
                            <p class="fst-italic m-0"><span class="fw-bolder text-secondary">Employee : #{val.Employee_Name}</span></p>
                            <p class="text"><span class="fw-bold"> Answer : </span>#{val.Answer}</p>
                        </div>
                </div>
            end
            if userid != 'Sign in'
                <form action="/productPage/#{product[0].ProductID}" method="POST">
                    <div class="form-group">
                        <textarea class="form-control mt-2" id="exampleFormControlTextarea1" rows="3" name="question" placeholder="Ask you Question Here"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Submit</button>
                </form>

            <div class="mt-5 text-center" style="width: 100%;">
                <h2 class="text-center mt-5">Reviews</h2>
            </div>
            for val in reviews
                <div style="border-bottom: 2.5px solid rgb(128, 126, 126);" class="mb-3">
                    <div class="row">
                        <p class="fst-italic m-0"><span class="fw-bolder text-secondary"> User : #{val.LoginID} 
                            - for(var i=0; i<val.Stars; i++) 
                                span ⭐
                            end
                        </span></p>
                        <p class="text"><span class="fw-bold"></span>#{val.Product_Preview}</p>
                    </div>
                </div>
            end
            <!-- write review -->
            if userid != 'Sign in'
                <div class="mt-5 text-center" style="width: 100%;">
                    <h2 class="text-center mt-5">Write Review</h2>
                </div>
                <form action="/productPage/#{product[0].ProductID}" method="POST">
                    <div class="form-group">
                        <textarea class="form-control mt-2" rows="3" name="review" placeholder="Write your Review Here"></textarea>
                    </div>
                    <div class="form-group">
                        <label >Select Rating</label>
                        <select class="form-control" name="rating">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Submit</button>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>

</html>