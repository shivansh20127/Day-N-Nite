<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            |    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>My Payment Options</title>
        <style>
        </style>
    </head>

    <body>
        <div class="container">
            <div class="flex d-flex form-label mt-4 justify-content-between">
                <a href="/" style="text-decoration: none">
                    | <h1 class="me-4">Day n Nite Store</h1>
                    | </a>
                <form action="/" method="POST" class="d-flex flex mt-2 col-6">
                    <input type="search" name="searchbox" class="form-control px-3" aria-label="searchbox"
                    |    placeholder="Search Here">
                    <button type="submit" class="ms-1 px-2" value="OK">GO</button>
                </form><a href="/signin" style="color: black; margin-top: 15px;">#{userid}</a>
            </div>
            <div class="fs-5 fw-bold col d-flex flex mt-5 mb-2">
                <p class="text">My Payments Options</p>
                <a href="/add_payment_option"><button type="submit" class=" ms-4 mb-5 btn btn-outline-success">Add Payment
                 |       Option</button></a>
            </div>
            <div>
                <div class="mb-3" style="border-bottom: 2px solid grey;">
                    <div style="width: 100%;">
                    <p class="text.dark"><span class="fw-bold">Credit/Debit Cards</span></p>
                        if creditDebit.length == 0
                            <div class="mx-5" style="width: 100%;">
                                <p class="text.dark"><span class="fw-bold">None </p>
                            </div>
                        else
                            each val3 in creditDebit
                                <div class="mx-5 mb-3 d-flex flex justify-content-between">
                                    <p class="text.dark"><span class="fw-bold">Card Number: </span>#{val3[0].Card_Number}  || <span class="fw-bold">Holder Name: </span>#{val3[0].Holder_Name} ||  <span class="fw-bold">Expiry Date: </span>#{val3[0].Expiry_Date}</p>
                                    <a href="/Delete_Payment/D#{val3[0].PaymentID}"><button type="submit" class="btn btn-secondary">Delete</button></a>
                                </div>
                            end
                    </div>
                </div>
                <div class="mb-3" style="border-bottom: 2px solid grey;">
                    <div style="width: 100%;">
                    <p class="text.dark"><span class="fw-bold">Net Banking</span></p>
                        if Net_Banking.length == 0
                            <div class="mx-5" style="width: 100%;">
                                <p class="text.dark"><span class="fw-bold">None</p>
                            </div>
                        else
                            each val3 in Net_Banking
                                <div class="mx-5 mb-3 d-flex flex justify-content-between">
                                    <p class="text.dark"><span class="fw-bold">Account Number: </span>#{val3[0].Account_Number}  || <span class="fw-bold">Holder Name: </span>#{val3[0].Holder_Name} ||  <span class="fw-bold">Bank Name: </span>#{val3[0].Bank_Name} || <span class="fw-bold">IFSC Code: </span>#{val3[0].IFSC_Code}</p>
                                    <a href="/Delete_Payment/N#{val3[0].PaymentID}"><button type="submit" class="btn btn-secondary">Delete</button></a>
                                </div>
                            end
                    </div>
                </div>
                <div class="mb-3" style="border-bottom: 2px solid grey;">
                    <div style="width: 100%;">
                    <p class="text.dark"><span class="fw-bold">UPI</span></p>
                        if UPI.length == 0
                            <div class="mx-5" style="width: 100%;">
                                <p class="text.dark"><span class="fw-bold">None</p>
                            </div>
                        else
                            each val3 in UPI
                                if val3[0] != null
                                    <div class="mx-5 mb-3 d-flex flex justify-content-between">
                                        <p class="text.dark"><span class="fw-bold">UPI ID: </span>#{val3[0].UPI_ID} </p>
                                        <a href="/Delete_Payment/U#{val3[0].PaymentID}"><button type="submit" class="btn btn-secondary">Delete</button></a>
                                    </div>
                            end
                    </div>
                </div>
                    
            </div>
        </div>

            
            

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>

</html>