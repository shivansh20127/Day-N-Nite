<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
            |    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <title>Document</title>
        <style>
        </style>
    </head>

    <body>
        <div class="container">
            <div class="flex d-flex form-label mt-4 justify-content-between">
                <a href="/" style="text-decoration: none">
                    | <h1 class="me-4">Day n Nite Store</h1>
                    | </a>
                <form action="/" method="POST" class="d-flex flex mt-2 col-6">
                    <input type="search" name="searchbox" class="form-control px-3" aria-label="searchbox"
                    |    placeholder="Search Here">
                    <button type="submit" class="ms-1 px-2" value="OK">GO</button>
                </form><a href="/signin" style="color: black; margin-top: 15px;">#{userid}</a>
            </div>
            <h2 class="mt-5 mb-4">My Orders</h2>
            <div>
                if order.length == 0
                    <div class="mx-5" style="width: 100%;">
                        <p class="text.dark"><span class="fw-bold">None </p>
                    </div>
                else
                    each val,index in order
                        <div class="mb-3" style="border-bottom: 2px solid grey;">
                            <div style="width: 100%;">
                            <p class="text.dark"><span class="fw-bold">Order ID:</span> #{val.OrderID}</p>
                                each val3 in products[index]
                                    <div class="mx-5" style="width: 100%;">
                                    <p class="text.dark"><span class="fw-bold">#{val3.Product_Name} </span> x #{val3.Quantity}</p>
                                    </div>
                                end
                            </div>
                            <div class="mx-4" style="width: 100%;">
                                <p><span class="fw-bold">Total Cost: </span>#{val.Total_cost}</p>
                            </div>
                            if val.Order_Status == 'D'
                                <div class="mx-4" style="width: 100%;">
                                    <p><span class="fw-bold">Delivery Status: </span>Delivered || <span class="fw-bold">Delivery Date: </span>#{val.Date_of_Ordering}</p>
                                </div>
                            if val.Order_Status == 'ND'
                                <div class="mx-4" style="width: 100%;">
                                    <p><span class="fw-bold">Delivery Status: </span>Not Delivered || <span class="fw-bold">Delivery Date: </span>#{val.Date_of_Ordering}</p>
                                </div>
                            if val.Order_Status == 'R'
                                <div class="mx-4" style="width: 100%;">
                                    <p><span class="fw-bold">Delivery Status: </span>Returned || <span class="fw-bold">Delivery Date:
                                        </span>#{val.Date_of_Ordering}</p>
                                </div>
                            if val.Order_Status == 'C'
                                <div class="mx-4" style="width: 100%;">
                                    <p><span class="fw-bold">Delivery Status: </span>Cancelled || <span class="fw-bold">Delivery Date:
                                        </span>#{val.Date_of_Ordering}</p>
                                </div>
                            <div class="mx-4" style="width: 100%;">
                                <p><span class="fw-bold">Delivery Address: </span>#{val.Street}, #{val.Address_Line}, #{val.District}, #{val.City}, #{val.Country} - #{val.Pincode}</p>
                            </div>
                        </div>
                    end
            </div>

            
            

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>

</html>